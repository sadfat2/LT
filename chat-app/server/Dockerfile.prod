FROM node:18-alpine

WORKDIR /app

# 安装生产依赖
COPY package*.json ./
RUN npm ci --only=production

# 复制源代码
COPY src ./src

# 创建上传目录
RUN mkdir -p uploads/avatars uploads/images uploads/voices

# 设置非 root 用户（安全）
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 && \
    chown -R nodejs:nodejs /app

USER nodejs

EXPOSE 3000

# 生产模式启动
CMD ["node", "src/app.js"]
